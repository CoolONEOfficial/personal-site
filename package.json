{
  "name": "nuxt-firebase-pwa",
  "version": "1.0.0",
  "description": "Nuxt.js * Firebase = SPA * SSR * PWA * Serverless",
  "author": "Nickolay Trukhin &lt;coolone.official@gmail.com&gt; (http://coolone.ru), Shinnosuke Uwai <uydasan@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "cd src && yarn dev",
    "build": "yarn build:src",
    "build:src": "cd src && yarn build",
    "install": "yarn install:functions && yarn install:src",
    "install:functions": "cd functions && yarn",
    "install:src": "cd src && yarn",
    "lint": "yarn lint:functions && yarn lint:src",
    "lint:functions": "cd functions && yarn lint",
    "lint:src": "cd src && yarn lint",
    "copydeps:src": "rsync -av --progress ./src ./functions/personal-site --exclude src/node_modules",
    "setup": "yarn copydeps:src && yarn install && yarn build && cp -R src/.nuxt functions/nuxt && yarn clean && yarn copyassets && yarn copystatic",
    "clean": "mkdir -p public && rm -rf public/*",
    "copyassets": "cp -R functions/nuxt/dist/ public/assets",
    "copystatic": "cp -R src/static/* public",
    "preserve": "yarn setup",
    "serve": "firebase serve --only hosting,functions",
    "predeploy": "yarn setup",
    "deploy": "firebase deploy",
    "postdeploy": "rm -rf functions/nuxt functions/personal-site"
  }
}
