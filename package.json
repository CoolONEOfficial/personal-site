{
  "name": "nuxt-firebase-pwa",
  "version": "1.0.0",
  "description": "Nuxt.js * Firebase = SPA * SSR * PWA * Serverless",
  "author": "Nickolay Trukhin &lt;coolone.official@gmail.com&gt; (http://coolone.ru), Shinnosuke Uwai <uydasan@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "cd src && yarn dev",
    "build:src": "cd src && yarn build",
    "install": "yarn copydeps:src && yarn install:functions && yarn install:src",
    "install:functions": "cd functions && yarn",
    "install:src": "cd src && yarn",
    "lint": "yarn lint:functions && yarn lint:src",
    "lint:functions": "cd functions && yarn lint",
    "lint:src": "cd src && yarn lint",
    "copydeps:src": "rsync -av ./src ./functions/personal-site --exclude src/node_modules",
    "setup:functions": "yarn clean && yarn install",
    "setup:src": "yarn build:src && cp -R src/.nuxt functions/nuxt && yarn copyassets && yarn copystatic",
    "setup": "yarn setup:functions && yarn setup:src",
    "clean": "mkdir -p public functions/nuxt functions/personal-site && rm -rf public/* functions/nuxt functions/personal-site",
    "copyassets": "cp -R functions/nuxt/dist/ public/assets",
    "copystatic": "cp -R src/static/* public",
    "preserve": "yarn setup:functions",
    "serve": "firebase serve --only hosting,functions",
    "postserve": "yarn clean",
    "predeploy": "yarn setup",
    "deploy": "[[ -z \"$FIREBASE_TOKEN\" ]] && firebase deploy || firebase deploy --token $FIREBASE_TOKEN",
    "postdeploy": "yarn clean",
    "predeploy:functions": "yarn setup:functions",
    "deploy:functions": "firebase deploy --only functions",
    "postdeploy:functions": "yarn clean",
    "predeploy:api": "yarn setup:functions",
    "deploy:api": "firebase deploy --only functions:webApi",
    "postdeploy:api": "yarn clean",
    "predeploy:src": "yarn setup:src",
    "deploy:src": "firebase deploy --only hosting",
    "postdeploy:src": "yarn clean",
    "ncu": "yarn ncu:src && yarn ncu:functions",
    "ncu:src": "cd src && ncu -u",
    "ncu:functions": "cd functions && ncu -u"
  }
}
